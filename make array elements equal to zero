class Solution:
    def countValidSelections(self, nums: List[int]) -> int:
        total=sum(nums)
        left=0
        ans=0
        for v in nums:
            right=total-left-v
            if v==0:
                if left==right:
                    ans+=2
                elif abs(left-right)==1:
                    ans+=1
            left+=v
        return ans
        
